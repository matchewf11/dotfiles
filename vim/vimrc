set number relativenumber
set splitright splitbelow
set smartindent autoindent
set signcolumn=yes scrolloff=10 laststatus=2 showtabline=2
set undofile undodir=~/.vim/undo noswapfile updatetime=100
set completeopt=noinsert,menuone,noselect omnifunc=ale#completion#OmniFunc
set timeoutlen=300 mouse=a
set termguicolors background=dark
set expandtab tabstop=4 shiftwidth=4 softtabstop=4
set path+=**

function! LinterStatus() abort
    let l:counts = ale#statusline#Count(bufnr(''))
    let l:all_errors = l:counts.error + l:counts.style_error
    let l:all_non_errors = l:counts.total - l:all_errors
    return l:counts.total == 0 ? 'OK' : printf(
    \   '%dW %dE',
    \   all_non_errors,
    \   all_errors
    \)
endfunction

set statusline=%f\ %m%r%h%w%y%q%=ALE:\ %{LinterStatus()}\ \|\ %l/%L:%c%V

augroup delete_trailing_whitespace
  autocmd!
  autocmd BufWritePre * %s/\s\+$//e
augroup END

let mapleader = " "
nnoremap <leader>e :Ex<CR>
